#!/usr/bin/env python

import argparse
import os


def main():
    if os.getuid() != 0 or os.getgid() != 0:
        print 'Must use sudo to run brightness'
        exit(1)

    parser = argparse.ArgumentParser(description='Adjust the brightness level')
    parser.add_argument('level', type=int, choices=range(10),
                        help='The new brightness level')
    args = parser.parse_args()


    cmd = 'echo {} > /sys/class/backlight/acpi_video0/brightness'
    os.system(cmd.format(args.level))

if __name__ == '__main__':
    main()
