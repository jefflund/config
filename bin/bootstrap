#!/usr/bin/env bash

echo "Install git and wget"
sleep .5
sudo dnf install -y git-core wget

echo "Fetching ssh ids and hosts from AML (probably requires AML password)"
sleep .5
rsync -av jlund3@aml.cs.byu.edu:/aml/home/jlund3/.ssh $HOME

echo "Cloning config repo"
sleep .5
git clone git@github.com:jlund3/config $HOME/config
