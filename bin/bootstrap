#!/usr/bin/bash

echo "Install git and wget"
sleep .5
sudo yum install -y git wget

echo "Fetching ssh keys from AML (probably requires AML password)"
sleep .5
rsync -av aml.cs.byu.edu:/aml/home/jlund3/.ssh $HOME

echo "Cloning config repo"
sleep .5
git clone git@github.com:jlund3/config $HOME/config
